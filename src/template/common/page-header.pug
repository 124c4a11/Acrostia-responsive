header.page-header
  .container
    .row
      //logo
      .col-xs-6.col-md-2
        .logo.page-header__logo
          a.logo__link(href="/")
            img.logo__img(src="assets/img/acrostia_logo.png", alt="acrostia")
            span.logo__text Acrostia
      //main-menu
      .col-xs-6.col-md-10
        .main-menu
          button.main-menu__toggle.hamburger
            span.hamburger__item
          nav.main-menu__nav
            ul.main-menu__list
              -
                var menuItems = [
                  {
                    title: 'Home',
                    anchor: 'home',
                    color: 'blue'
                  },{
                    title: 'Services',
                    anchor: 'services',
                    color: 'red'
                  },{
                    title: 'About',
                    anchor: 'about',
                    color: 'purple'
                  },{
                    title: 'Work',
                    anchor: 'work',
                    color: 'green'
                  },{
                    title: 'Contacts',
                    anchor: 'contacts',
                    color: 'blue'
                  }
                ];

              each item in menuItems
                li.main-menu__item(class=`main-menu__item_${item.color}`, data-menuanchor= item.anchor)
                  a.main-menu__link(href=`#${item.anchor}`)= item.title
      ///main-menu